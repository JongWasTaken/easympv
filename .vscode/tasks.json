{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mpv (default)",
            "type": "shell",
            "command": "/usr/bin/mpv /mnt/smb/Anime/Incoming",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "EASYMPV_ARGS": "options=showHiddenFiles:true;debug=true",
                }
            }
        },
        {
            "label": "mpv (no file/ no log)",
            "type": "shell",
            "command": "/usr/bin/mpv --player-operation-mode=pseudo-gui --",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "EASYMPV_ARGS": "options=showHiddenFiles:true;debug=true;workdir=/mnt/smb/Anime/Incoming",
                }
            }
        },
        {
            "label": "mpv (testing snapshot)",
            "type": "shell",
            "command": "/usr/bin/mpv --config-dir=\"snapshots/testing\" \"/mnt/smb/Anime/Incoming\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "env": {
                    "EASYMPV_ARGS": "debug=true"
                }
            }
        }
    ]
}