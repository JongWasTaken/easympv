{
    "Tests: all test features/reference": {
        "description": "May god help you if this fails.",
        "variables": [
            "myAwesomeVariable = undefined"
        ],
        "preparation": [
            {
                "target": "mp.msg.warn",
                "arguments": ["reference"],
                "destination": "myAwesomeVariable"
            },
            {
                "target": "mp.msg.warn",
                "arguments": ["@myAwesomeVariable"]
            }
        ],
        "target": "mp.utils.write_file",
        "arguments": [
            "file://~~/temp.txt",
            "incredible file content"
        ],
        "expectedResult": true,
        "cleanup": [
            {
                "type": "file",
                "content": "~~/temp.txt"
            }
        ]
    },
    "OS: download file": {
        "target": "OS.dependencyDownload",
        "arguments": [
            "https://smto.pw/worlds/images/blackstone.png",
            "removeme.png"
        ],
        "expectedResult": true,
        "cleanup": [
            {
                "type": "file",
                "content": "~~/removeme.png"
            }
        ]
    },
    "OS: get image info (linux only)": {
        "target": "OS.getImageInfo",
        "arguments": [
            "~~/scripts/easympv/images/logo.bmp"
        ],
        "expectedResult": {
            "error_string": "",
            "killed_by_us": false,
            "status": 0,
            "stdout": "PC bitmap, Windows 3.x format, 200 x -60 x 32, image size 48000, resolution 3780 x 3780 px/m, cbSize 48054, bits offset 54\n"
            }
    }
}